#include <stdint.h>
#include <stdio.h>
#include "sensors.h"
#include "ultrasonic.h"
#include "stm32f4xx.h"

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif





int main(void)
{
    Ultrasonic_GPIO_Init();  // Use new name
    GPIO_Init();

    while (1)
    {
        double distance = Read_Distance();
        int water_status = Read_Water_Sensor();
        int gas_status = Read_Gas_Sensor();

        if (distance < 20.0 && distance > 2.0)
        {
            GPIOA->BSRR = (1 << 7); // LED ON
        }
        else
        {
            GPIOA->BSRR = (1 << (7 + 16)); // LED OFF
        }

        TIM2_us_Delay(50000);
        }
       if (water_status || gas_status) {
           // Turn on LED if water is detected or gas is detected
           GPIOA->ODR |= (1 << 5);
       } else {
           // Turn off LED
           GPIOA->ODR &= ~(1 << 5);
       }
   }
}




