#include <stdint.h>
#include <stdio.h>
#include <string.h>
#include "uart.h"
#include "sensors.h"
#include "ultrasonic.h"
#include "stm32f4xx.h"

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif




int main(void) {
    GPIO_Init();
    TIM2_Init();

    while (1) {
        int distance = Ultrasonic_Read();
        int water = Read_Water_Sensor();
        int gas = Read_Gas_Sensor();

        if (distance < 10 || water || gas) {
            // Danger: LED ON
            GPIOA->ODR |= (1 << 5);
        } else {
            // Safe: LED OFF
            GPIOA->ODR &= ~(1 << 5);
        }
    }
}



